{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server in Developement",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
              }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server in Testing",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\tests\\test.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
              }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server in Production",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production"
              }
        }
    ]
}